extends layout

block content
	h2 Upload

	<div>

		<input type="file" name="file" style="visibility:hidden;" id="file">
		<label>Choose A File</label>
		<div class="input-append">
			<!-- This input is here purely for cosmetic reasons. The actual file is uploaded from the hidden input box !-->
			<input type="text" id="subfile" class="input-xlarge">
			<a class="btn" onclick="$('#file').click();">Browse</a>
		</div>
		
	</div>


	 
	br

	div(class="dropdown")
		button(class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown") Type 
			span(class="caret")
		ul(class="dropdown-menu")
			li
				a(href="#") Movie
			li
				a(href="#") TV Show
			li
				a(href="#") Other

	br

	button(id="upload" type="button" class="btn btn-success") Upload

	script(src="javascripts/fileinput.js")